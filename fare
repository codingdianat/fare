#include <iostream>
#include <string>
using namespace std;


int main (){
    double totalFare;

    cout.setf(ios::fixed);
    cout.precision(2);
    
    cout << "Age of rider: ";
    int age;
    cin >> age;
    
    cin.ignore(10000,'\n');
    
    string student;
    cout<<"Student? (y/n) ";
    getline(cin,student);
    
    string destination;
    cout<< "Destination: ";
    getline(cin,destination);
    
    cout<<"Number of zone boundaries crossed: ";
    int boundaries;
    cin >> boundaries;
    
    cout <<"---"<<endl;
    

    if (destination == "" ){
        cout<< "You must enter a destination"<<endl;
    }
    
    if (student != "y" && student != "n"){
        cout << "You must enter y or n"<< endl;
    }
    
    if (boundaries < 0){
        cout << "The number of zone boundaries crossed must not be negative"<<endl;
    }
    
    
    
    if ((age >= 65 && (boundaries == 0||boundaries==1))){
        totalFare=0.45;
        cout<<"The fare to "<<destination<< " is $"<<totalFare<<endl;
    }
    else if ((age<18 || student=="y") && (boundaries == 0 || boundaries == 1)){
        totalFare=0.65;
        cout<<"The fare to "<<destination<< " is $"<<totalFare<<endl;
    }

    else if ( age>=65 ){
        totalFare=0.55+0.35*boundaries;
        cout<<"The fare to "<<destination<<" is $"<<totalFare<<endl;
    }
    else if ((age >=18) || age<18){
        totalFare=1.45+boundaries*0.55;
        cout<<"The fare to "<<destination<<" is $"<<totalFare<<endl;
    }






 
    }



        
    
    
    
   
        
    

    
    
   
    

